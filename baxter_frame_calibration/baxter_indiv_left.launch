<launch>
	<arg name="marker_size" default="6.0" /> 
	<arg name="max_new_marker_error" default="0.00008" />
	<arg name="max_track_error" default="0.0002" />

	<arg name="cam_image_topic" default="/cameras/left_hand_camera/image" />
	<arg name="cam_info_topic" default="/cameras/left_hand_camera/camera_info" />		
	<arg name="output_frame" default="/left_hand_camera" />

	<node name="ar_track_alvar3" pkg="ar_track_alvar" type="individualMarkersNoKinect" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" />
</launch>

