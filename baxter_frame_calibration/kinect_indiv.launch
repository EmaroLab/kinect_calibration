<launch>
	<arg name="marker_size" default="6.0" />
	<arg name="max_new_marker_error" default="0.00008" />
	<arg name="max_track_error" default="0.0002" />

	<arg name="cam_image_topic" default="/cameraB/depth_registered/points" />
	<arg name="cam_info_topic" default="/cameraB/rgb/camera_info" />		
	<arg name="output_frame" default="/cameraB_rgb_optical_frame" />

	<node name="ar_track_alvar2" pkg="ar_track_alvar" type="individualMarkers" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" />
</launch>
